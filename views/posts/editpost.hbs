<article class="edit-post-container">
  <h1 style="color:lightseagreen">Edit project</h1>

  <div class="card-header edit-post-card">
    <div>
      <img class="rounded-circle post-image" src="{{ post.user.avatar }}" alt="author photo">
    </div>
    <div class="edit-post-head">
      <span class="card-title">{{ post.user.name }}</span>
      <div class="text-muted">Published on {{ post.createdAt }}</div>
    </div>

  </div>
  <div class="edit-post-form">
    <form action="/post/{{post._id}}/editpost" method="POST">
      <label for="body">Edit post:</label>
      <textarea class="form-control" name="body" id="body">{{ post.body }}</textarea>
      <button id="edit-save" type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>

  <div class="card-footer edit-footer"></div>
</article>