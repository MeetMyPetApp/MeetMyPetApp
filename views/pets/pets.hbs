<div class="row py-5 px-4">
    <div class="col mx-auto">
        <!-- Profile widget -->
        <div class="bg-white shadow rounded overflow-hidden">
            <div class="media profile-head">
                <div class="left-head">
                    <div class="profile mr-3"><img src="{{user.avatar}}" alt="user avatar" width="130"
                            class="rounded mb-2 img-thumbnail">
                    </div>
                </div>

                <div class="right-head">
                    <div class="media-body text-black">
                        <h2><b>{{user.name}}</b></h2>
                        <h5><b>@{{user.username}}</b>
                        </h5>
                        <h6>Status:{{user.status}}</h6>
                    </div>

                    {{#ifeq currentUser.id user._id }}

                    <div id="user-profile-btn-area">
                        <a class="btn btn-link crud-buttons" href="/user/{{user._id}}/edit">Edit profile</a>
                        <a class="btn btn-link crud-buttons" href="/user/{{user._id}}/delete">Delete
                            profile</a>
                        <a class="btn btn-link crud-buttons" href="/logout">Logout</a>
                    </div>
                    {{/ifeq}}
                </div>

            </div>

            <div class="py-4 px-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <b>
                        <h5 class="mb-0">My pets</h5>
                    </b><a href="/user/{{user.id}}/profilefeed" class="btn btn-link button-text">Back
                        to feed</a>
                </div>

                <a class="btn btn-link button-text" href="/user/{{user.id}}/addNewPet">Add new pet</a>

                {{#if pets}}
				{{#each pets as |pet|}}
				<div class="card">
					<div class="row no-gutters">

						<div class="col-xl-4 col-lg-12">

							<img src="{{ pet.avatar }}" class="card-img pets-image" alt="pet avatar">
						</div>
						<div class="pets-card col-xl-8 col-lg-12">
							<div class="card-body">
								<b><h4 style="color:lightseagreen">Name: {{ pet.name }}</h4></b>
								<h5>Breed: {{ pet.breed }}</h5>
								<b><h6 id="pet-status" style="color:lightseagreen">Status: {{ pet.available }}</h6></b>
								<p class="card-text">About pet: {{ pet.bio }}</p>
								<a class="btn btn-link button-text" href="/pet/{{pet.id}}/profile">
									View pet profile
								</a>

							</div>
						</div>

					</div>
				</div>
				{{/each}}
				{{/if}}

            </div>
        </div>
    </div>
</div>