<div id="index-page-container">
   <h2>News feed</h2>

   <form action="/post/new" method="POST">
      <div class="form-group">
         <label for="body">Any news?</label>
         <textarea name="body" type="text" class="form-control {{#if error.body }}is-invalid{{/if}}" id="body"
         placeholder="Write your post..." rows="4"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Submit post</button>
   </form>

   <hr class="style3">

   {{#if posts }}
   {{#each posts as |post| }}
      <div class="card mb-3">
         <div class="card-header">
            <img class="rounded-circle" src="{{ post.user.avatar }}" alt="author photo">
            <span class="card-title">{{ post.user.name }}</span>
            <div class="text-muted">Published on {{ post.createdAt }}</div>
         </div>
         <div class="card-body"> {{ post.body }} </div>
         <div class="card-footer">
            {{#if post.likes}}
               <span class="text-muted">
                  <a href="/post/{{post._id}}/like"><i class="fa fa-heart"></i></a> 
                  {{post.likes.length}} &nbsp;- 
               </span>
            {{/if}}
            {{#if post.comments}}
               <span class="text-muted">comments: {{post.comments.length}} | </span>
               <a href="/post/{{post._id}}">View comments</a>
            {{/if}}
         </div>
      </div>
   {{/each}}
   {{/if}}
</div>

