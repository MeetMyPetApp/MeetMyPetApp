<div id="login-page-container">

    <h2>Login</h2>

    {{#if message}}
        <div class="alert alert-primary" role="alert">
            {{message}}
        </div>
    {{/if}}
    {{#if error.validation}}
        <div class="alert alert-danger" role="alert">
            {{error.validation.message}}
        </div>
    {{/if}}
    <form action="/login" method="POST">
        <div class="form-group">
            <label for="email">E-mail:</label>
            <input name="email" type="text" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
            placeholder="Enter e-mail" value="{{ user.email }}">

            {{#if error.email}}
            <div class="invalid-feedback">
            {{error.email.message}}
            </div>
            {{/if}}
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
            placeholder="Enter password" value="{{ user.password }}">

            {{#if error.password}}
            <div class="invalid-feedback">
            {{error.password.message}}
            </div>
            {{/if}}
        </div>

        <div id="login-btn-area">
            <button type="submit">Log in</button>
            <div id="social-login-btns">
                <a href="/auth/slack"><i class="fa fa-slack"></i> Log in with Slack</a>
                <a href="/auth/google"><i class="fa fa-google"></i> Log in with Google</a>
            </div>
        </div>

        <p>You don't have an account? <a href="/signup">register here</a> </p>
    </form>
</div>