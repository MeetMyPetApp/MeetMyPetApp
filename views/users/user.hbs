<div id="user-profile-page">
    <div class="row project-card">
        <div class="col-sm-12 col-lg-3 project-card-left">
            <img class="profile-image" src="{{user.avatar}}" alt="profile image"> 
        </div>
        <div class="col-sm-12 col-lg-9 project-card-right">
            <div>
                <button onclick="history.back()">Back</button>
            </div>
            <p>Name: {{user.name}}</p>
            <p>Username: {{user.username}}</p>
            <p>E-Mail: {{user.email}}</p>
            <p>Short description of yourself:</p>
            <p><i>{{user.bio}}</i></p>
            <br>
             <div id="user-profile-btn-area">
                <a href="/user/{{user._id}}/edit">Edit profile</a>
                <a href="/user/{{user._id}}/delete">Delete profile</a>
            </div>
            <br>
            <div>
                <a href="/newproject">Create new project</a>
            </div>
            <h4>My projects:</h4>
            {{#if user.projects}}
                {{#each user.projects as |project|}}
                    <div class="row project-card">
                        <div class="col-12 project-card-right">
                            <h3>{{project.title}}</h3>
                            <p>{{project.body}}</p>
                            <div class="comments-likes-area">
                                <span>Likes: {{project.likes.length}}</span>
                                <span>- Comments: {{project.comments.length}}</span>
                            </div>
                            <div>
                                <a href="/project/{{project._id}}">View project</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>