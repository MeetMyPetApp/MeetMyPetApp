<div class="row py-5 px-4">
	<div class="col-md-5 mx-auto">
		<!-- Profile widget -->
		<div class="bg-white shadow rounded overflow-hidden">
			<div class="media align-items-end profile-head">
				<div class="profile mr-3"><img src="{{posts.[0].user.avatar}}" alt="user avatar" width="130"
						class="rounded mb-2 img-thumbnail">{{!-- <a href="#"
						class="btn btn-outline-dark btn-sm btn-block">Match</a> --}}</div>
				<div class="media-body mb-5 text-black">
					<h4 class="mt-0 mb-0">{{posts.[0].user.name}}</h4>
					<p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2"></i>{{posts.[0].user.username}}</p>
				</div>
			</div>



			<div class="bg-light p-4 d-flex justify-content-end text-center">
				<ul class="list-inline mb-0">
					<li class="list-inline-item">
						<h5 class="font-weight-bold mb-0 d-block">215</h5><small class="text-muted"> <i
								class="fas fa-image mr-1"></i>Posts</small>
					</li>
					<li class="list-inline-item">
						<h5 class="font-weight-bold mb-0 d-block">745</h5><small class="text-muted"> <i
								class="fas fa-user mr-1"></i>Likes</small>
					</li>
					<li class="list-inline-item">
						<h5 class="font-weight-bold mb-0 d-block">340</h5><small class="text-muted"> <i
								class="fas fa-user mr-1"></i>Matching</small>
					</li>
				</ul>
			</div>
			<div class="px-4 py-3">
				<h5 class="mb-0">About</h5>
				<div class="p-4 rounded shadow-sm bg-light">
					<p class="font-italic mb-0">{{posts.[0].user.bio}}</p>
				</div>
			</div>



			<div class="py-4 px-4">
				<div class="d-flex align-items-center justify-content-between mb-3">
					<h5 class="mb-0">Recent posts</h5><a href="/user/{{posts.[0].user._id}}/pets"
						class="btn btn-link text-muted">Show Pets</a>
				</div>
				<div class="row">
					{{#if posts }}
					{{#each posts as |post| }}
					<div class="card mb-3">
						<div class="card-header">
							<img class="rounded-circle" src="{{ post.user.avatar }}" alt="author photo">
							<span class="card-title">{{ post.user.name }}</span>
							<div class="text-muted">Published on {{ post.createdAt }}</div>
						</div>
						<div class="card-body"> {{ post.body }} </div>
						<div class="card-footer">
							{{#if post.likes}}
							<span class="text-muted">
								<a href="/post/{{post._id}}/like"><i class="fa fa-heart"></i></a>
								{{post.likes.length}} &nbsp;-
							</span>
							{{/if}}
							{{#if post.comments}}
							<span class="text-muted">comments: {{post.comments.length}} | </span>
							<a href="/post/{{post._id}}">View comments</a>
							{{/if}}
						</div>
					</div>
					{{/each}}
					{{/if}}

					 {{#if posts}}
                {{#each posts as |post|}}
                    <div class="card mb-3">
                        <div class="card-header">
                            <a href="/user/{{post.user._id}}">
                                <img class="rounded-circle" src="{{ post.user.avatar }}" alt="author photo">
                                <span class="card-title">{{ post.user.name }}</span>
                                <div class="text-muted">Published on {{ post.createdAt }}</div>
                            </a>
                        </div>
                        <div class="card-body"> {{ post.body }} </div>

                        <div class="card-footer">
                            <button type="button" class="btn-sm btn btn-outline-danger" data-like-post="{{post._id}}">
                                <i class="fa fa-heart mr-1"></i>
                                <span class="likes-count">{{post.likes.length}}</span>
                                Likes
                            </button>
                            <span class="text-muted">comments: {{post.comments.length}} | </span>
                            <a href="/post/{{post._id}}">Comments</a>
                             {{#ifeq ../currentUser.id post.user._id }}
                                <a href="/post/{{post._id}}/editpost" class="btn-sm btn btn-outline-danger">Edit</a>
                                <a href="/post/{{post._id}}/deletepost" class="btn-sm btn btn-outline-danger">Delete</a>
                            {{/ifeq}}
                        </div>
                    </div>
                {{/each}}
            {{/if}}

				</div>
			</div>
		</div>
	</div>
</div>