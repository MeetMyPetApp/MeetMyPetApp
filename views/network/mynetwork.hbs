<div class="container">
	<div class="user-network">
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link" href="/user/{{currentUser.id}}/network">Match with people</a>

			</li>
			<li class="nav-item">
				<a class="nav-link active" href="/user/{{currentUser.id}}/matches">My matches</a>
			</li>
		</ul>
	</div>

	<div class="row bootstrap snippets bootdey">
		<div class="col-md-8 col-xs-12">
			<div class="panel" id="followers">
				<div class="panel-heading">
					<h3 class="panel-title">
						<i class="icon md-check" aria-hidden="true"></i> Current Matches
					</h3>
				</div>

				{{#each users as |user|}}
				<div class="panel-body">
					<ul class="user-card list-group list-group-dividered list-group-full">

						<li class="list-group-item">
							<div class="media">
								<div class="media-left">
									<a class="avatar avatar-away" href="javascript:void(0)">
										<img src="{{user.avatar}}" alt="">
										<i></i>
									</a>
								</div>
								<div class="media-body">
									<div class="pull-right">
										<a href="/user/{{user._id}}/profilefeed" class="btn btn-info btn-sm waves-effect waves-light">View
											Profile</a>
									</div>
									<div><a class="name" href="javascript:void(0)">{{user.name}}</a></div>
									<small>{{user.username}}</small>
								</div>
							</div>
						</li>
					</ul>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>