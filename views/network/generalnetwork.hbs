<div class="container">
	<div class="user-network">
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link active" href="#">Match with people</a>

			</li>
			<li class="nav-item">
				<a class="nav-link" href="/user/{{ user._id }}/pets">My matches</a>
			</li>
		</ul>
	</div>


	<div class="row bootstrap snippets bootdey">
		<div class="col-md-8 col-xs-12">
			<div class="panel" id="followers">
				<div class="panel-heading">
					<h3 class="panel-title">
						<i class="icon md-check" aria-hidden="true"></i> MeetMyPet Network
					</h3>
				</div>
				{{#each users as |user|}}
				<div class="panel-body">
					<ul class="list-group list-group-dividered list-group-full">
						<li class="list-group-item">
							<div class="media">
								<div class="media-left">
									<a class="avatar avatar-online" href="javascript:void(0)">
										<img src="{{user.avatar}}" alt="">
										<i></i>
									</a>
								</div>
								<div class="media-body">
									<div class="pull-right">
										<button type="button"
											class="btn btn-info btn-sm waves-effect waves-light">Match</button>
										<button type="button" class="btn btn-info btn-sm waves-effect waves-light">View
											Profile</button>
									</div>
									<div><a class="name" href="javascript:void(0)">{{user.name}}</a></div>
									<small>{{user.username}}</small>
									<small>{{user.status}}</small>
								</div>
							</div>
						</li>
					</ul>
				</div>
				{{#each}}
			</div>
		</div>
	</div>

</div>